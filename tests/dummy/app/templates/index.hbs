{{! template-lint-disable no-link-to-positional-params require-button-type no-action no-curly-component-invocation no-implicit-this }}
<h2 id="title">Welcome to Authmaker Ember Simple Auth</h2>

{{#if this.session.isAuthenticated}}
  <button {{action "invalidateSession"}} data-test-logout-button>Logout</button>
{{else}}
  <LinkTo @route="login" data-test-login-button>
    Click here to <b>Login Now!!</b>
  </LinkTo>
{{/if}}